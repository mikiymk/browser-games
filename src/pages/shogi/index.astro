---
import Head from "@/components/head.astro";
import Header from "@/components/header.astro";
import Setting from "@/components/setting-form/form.astro";
import Radio from "@/components/setting-form/radio.astro";
import SubHeader from "@/components/sub-header.astro";
---

<Head title="Shogi" />

<Header>Shogi</Header>
<Setting action="game/">
    <dt>First player</dt>
    <dd>
        <Radio name="first" value="non-player">Non-Player</Radio>
        <Radio name="first" value="player" checked>Player</Radio>
    </dd>

    <dt>Second player</dt>
    <dd>
        <Radio name="second" value="non-player" checked>Non-Player</Radio>
        <Radio name="second" value="player">Player</Radio>
    </dd>
</Setting>

<p>
    <SubHeader>Shogi</SubHeader>
</p>
