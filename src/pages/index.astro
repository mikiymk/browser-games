---
import Head from "@/components/head.astro";
import {
    h1Style,
    listStyle,
    listItemStyle,
    linkStyle,
} from "@/styles/common.css";

const pages = [
    { title: "Noughts and Crosses", name: "nought-and-cross" },
    { title: "Chess", name: "chess" },
    { title: "Mine Sweeper", name: "mine-sweeper" },
    { title: "Knight's Tour", name: "knight-tour" },
    { title: "Reversi", name: "reversi" },
];
---

<Head title="Games" />

<h1 class={h1Style}>Games</h1>
<ul class={listStyle}>
    {
        pages.map(({ title, name }) => (
            <li class={listItemStyle}>
                <a href={`${name}/`} class={linkStyle}>
                    {title}
                </a>
            </li>
        ))
    }
</ul>
