---
import Head from "@/components/common/head.astro";
---

<Head title="Chess" />

<form action="game/">
    <h1>Chess Settings</h1>

    <p>
        White Player
        <label>
            <input type="radio" name="white" value="non-player" />
            Non-Player
        </label>
        <label>
            <input type="radio" name="white" value="player" checked />
            Player
        </label>
    </p>

    <p>
        Black Player
        <label>
            <input type="radio" name="black" value="non-player" checked />
            Non-Player
        </label>
        <label>
            <input type="radio" name="black" value="player" />
            Player
        </label>
    </p>

    <button>Start</button>
</form>

