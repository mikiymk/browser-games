---
import Head from "@/components/head.astro";
import Header from "@/components/header.astro";
import Setting from "@/components/setting-form/form.astro";
import Radio from "@/components/setting-form/radio.astro";
import SubHeader from "@/components/sub-header.astro";
---

<Head title="Chess" />

<Header>Chess</Header>
<Setting action="game/">
    <dt>White Player</dt>
    <dd>
        <Radio name="white" value="non-player">Non-Player</Radio>
        <Radio name="white" value="player" checked>Player</Radio>
    </dd>

    <dt>Black Player</dt>
    <dd>
        <Radio name="black" value="non-player" checked>Non-Player</Radio>
        <Radio name="black" value="player">Player</Radio>
    </dd>
</Setting>

