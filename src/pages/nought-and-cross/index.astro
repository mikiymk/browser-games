---
import Head from "@/components/head.astro";
import Header from "@/components/header.astro";
import Setting from "@/components/setting-form/form.astro";
import InputRadio from "@/components/setting-form/input-radio.astro";
import { StyledSvg } from "@/components/styled-svg";
import SubHeader from "@/components/sub-header.astro";
import cross from "@/images/icon/cross.svg";
import nought from "@/images/icon/nought.svg";
import { App } from "@/games/nought-and-cross/components/app";
---

<Head title="Noughts and Crosses" />

<App client:only="solid-js" />

<Setting action="game/">
    <dt>
        <StyledSvg src={nought.src} alt="nought" /> player
    </dt>
    <dd>
        <InputRadio name="o" value="non-player">Non-Player</InputRadio>
        <InputRadio name="o" value="player" checked>Player</InputRadio>
    </dd>

    <dt>
        <StyledSvg src={cross.src} alt="cross" /> player
    </dt>
    <dd>
        <InputRadio name="x" value="non-player" checked>Non-Player</InputRadio>
        <InputRadio name="x" value="player">Player</InputRadio>
    </dd>
</Setting>

<p>
    <SubHeader>How to play Noughts and Crosses</SubHeader>

    <!-- TODO -->
</p>
