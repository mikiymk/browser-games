{
  "name": "js-html-game",
  "version": "0.1.0",
  "description": "html games",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "run-z test:vitest test:zig",
    "test:vitest": "vitest run",
    "test:wasm": "zig build test",
    "lint": "run-z lint:format lint:eslint lint:biome lint:typescript lint:knip",
    "lint:format": "biome ci .",
    "lint:eslint": "eslint src --cache",
    "lint:eslint-timing": "export TIMING=1 || set TIMING=1 && eslint src",
    "lint:biome": "biome check .",
    "lint:typescript": "tsc",
    "lint:knip": "knip",
    "lint:format-zig": "zig fmt --check ./src",
    "lint-fix:eslint": "eslint src --cache --fix",
    "lint-fix:biome": "biome check . --apply",
    "format:biome": "biome format . --write",
    "format:wasm": "zig fmt ./src",
    "build": "run-z build-wasm build-js",
    "build-js": "astro build",
    "build-wasm": "run-z build-wasm:chess build-wasm:reversi",
    "build-wasm:chess": "zig build chess -Dtarget=wasm32-freestanding -Doptimize=ReleaseFast",
    "build-wasm:reversi": "zig build reversi -Dtarget=wasm32-freestanding -Doptimize=ReleaseFast",
    "check-all:js": "run-z format:biome lint:biome lint:eslint lint:typescript build-js",
    "check-all:wasm": "run-z format:wasm test:wasm build-wasm",
    "check-all": "run-z check-all:wasm check-all:js",
    "ci": "run-z ci:wasm ci:js",
    "ci:js": "run-z lint:format lint:eslint lint:typescript lint:knip build-js",
    "ci:wasm": "run-z lint:format-zig test:wasm build-wasm",
    "serve": "astro dev",
    "serve-preview": "astro preview"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikiymk/js-html-game.git"
  },
  "author": "mikiymk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikiymk/js-html-game/issues"
  },
  "homepage": "https://github.com/mikiymk/js-html-game#readme",
  "devDependencies": {
    "@biomejs/biome": "^1.5.2",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.1.0",
    "@eslint/js": "^8.56.0",
    "@tsconfig/strictest": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vanilla-extract/vite-plugin": "^3.9.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-i": "^2.29.1",
    "eslint-plugin-solid": "^0.13.1",
    "eslint-plugin-unicorn": "^50.0.1",
    "eslint-plugin-vitest": "^0.3.20",
    "globals": "^13.24.0",
    "jsdom": "^23.2.0",
    "knip": "^4.0.4",
    "run-z": "^2.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "dependencies": {
    "@astrojs/solid-js": "^4.0.1",
    "@vanilla-extract/css": "^1.14.0",
    "astro": "^4.2.1",
    "astro-compress": "^2.2.8",
    "solid-js": "^1.8.11"
  }
}
